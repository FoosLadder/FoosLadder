@using System.Web.Optimization
@using FoosLadder.Website.ViewModels
<!doctype html>
<html lang="en" ng-app="foosLadderApp">
<head>
    <meta charset="utf-8">
    <meta content="IE=edge, chrome=1" http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ApplicationViewModel.ApplicationName</title>
    
    @Styles.Render("~/css/extLibs")
    @Styles.Render("~/css/app")
</head>
<body>
    <nav class="navbar navbar-default" role="navigation" data-ng-controller="IndexController">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="sr-only"></span>
                    <span class="icon-bar">Test</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#/">@ApplicationViewModel.ApplicationName</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li data-ng-hide="!authentication.isAuth"><a href="#/">Hello {{authentication.userName}}</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="#/scores/submit">Submit My Scores</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="#/orders">My Orders</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="#/refresh">Refresh Token</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="" data-ng-click="logOut()">Logout</a></li>
                    <li data-ng-hide="authentication.isAuth"> <a href="#/login">Login</a></li>
                    <li data-ng-hide="authentication.isAuth"> <a href="#/signup">Sign Up</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="view-container">
        <div ng-view class="view-frame"></div>
    </div>
    @Scripts.Render("~/bundles/extLibs","~/bundles/app")
    <script>
        var app = angular.module('foosLadderApp');
        app.value("apiBaseUrl", "@ApplicationViewModel.ApiBaseUrl");
    </script>
</body>
</html>
